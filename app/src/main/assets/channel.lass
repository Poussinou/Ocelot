(\#channel
 :font-family monospace
 (.update
  :display flex
  (>* :padding 2px 5px 2px 5px)
  (.clock :width 12vw
          :font-size 0.9em
          :text-align center
          :vertical-align middle)
  (.from :min-width 12vw
         :max-width 12vw
         :overflow hidden
         :white-space nowrap
         :text-overflow ellipsis)
  (.text :word-wrap break-word
         :white-space pre-wrap
         :min-width 0px
         :flex-grow 1
         (.payload
          :max-width 100%
          :max-height 50vh))))
